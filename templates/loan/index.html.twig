{% extends 'base.html.twig' %}

{% block title %}Uitleningen{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Voeg hier een uitlening toe:</h1>

        <form method="post" action="/loan/create">
            <label for="customer">Klant:</label><br>
            <select name="customer" id="customer">

                {% for c in customers %}

                    <option value="{{ c.id }}">{{ c.name }}</option>

                {% endfor %}

            </select> <br><br>


            <label for="book">Boek:</label><br>
            <select name="book" id="book">

                 {% for b in books %}

                     <option value="{{ b.id }}">{{ b.title }}</option>

                 {% endfor %}

                </select> <br><br>

            <button class="btn btn-primary">Voeg toe!</button>
        </form>

    </div>
{% endblock %}
