{% extends 'base.html.twig' %}

{% block title %}Klant bewerken{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
    <h1>Klant bewerken:</h1>

    <form method="post" action="/customer/update/{{ customer.id }}">

        <label for="name" id="name">Voer nieuwe naam in:</label><br>
        <input type="text" id="name" name="name" placeholder="{{ customer.name }}"><br><br>

        <label for="address" id="address">Voer nieuw adres in:</label><br>
        <input type="text" id="address" name="address" placeholder="{{ customer.address }}">

        <button type="submit" class="btn btn-warning btn-sm">Bewerken</button>





    </form>
{% endblock %}